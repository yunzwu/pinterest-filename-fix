{
  "manifest_version": 2,
  "name": "Pinterest Filename Fix",
  "version": "0.1.0",
  "description": "Downloads Pinterest images with a proper filename like title.jpg instead of just jpg.",
  "icons": {
    "48": "icons/icon-48.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "pinterest-filename-fix@ayk",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "permissions": [
    "downloads",
    "contextMenus",
    "*://*.pinterest.com/*",
    "*://i.pinimg.com/*"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.pinterest.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

